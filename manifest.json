{
    "manifest_version": 2,
    "name": "Bring back Google Images view button",
    "version": "1.0",
    "description": "This damn button!",
    "homepage_url": "https://github.com/rivetchip/bring-back-google-img-view-webext",
    
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png",
        "128": "icons/icon-128.png"
    },

    
    "content_scripts": [
        { "matches": ["https://www.google.fr/search*"], "run_at": "document_idle", "js": ["page-script.js"] },
        { "matches": ["https://www.google.fr/imgres*"], "run_at": "document_idle", "js": ["page-script.js"] },

        { "matches": ["https://www.google.com/search*"], "run_at": "document_idle", "js": ["page-script.js"] },
        { "matches": ["https://www.google.com/imgres*"], "run_at": "document_idle", "js": ["page-script.js"] }
    ],


    "permissions": [
        "activeTab"
    ]
  
  }